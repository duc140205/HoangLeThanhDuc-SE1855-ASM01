<Window x:Class="HoangLeThanhDucWPF.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoangLeThanhDucWPF"
        mc:Ignorable="d"
        Title="Admin Dashboard" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Customer Management">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5,0,10">
                        <Label Content="Search by Name:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtSearchCustomer" Width="200" Margin="5,0" Text="{Binding SearchCustomerText, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button x:Name="btnSearchCustomer" Content="Search" Width="80" Margin="5,0" Command="{Binding SearchCustomerCommand}"/>
                        <Button x:Name="btnAddCustomer" Content="Add New" Width="80" Margin="20,0,5,0" Command="{Binding AddCustomerCommand}"/>
                        <Button x:Name="btnUpdateCustomer" Content="Update" Width="80" Margin="5,0" Command="{Binding UpdateCustomerCommand}"/>
                        <Button x:Name="btnDeleteCustomer" Content="Delete" Width="80" Margin="5,0" Command="{Binding DeleteCustomerCommand}"/>
                    </StackPanel>

                    <DataGrid x:Name="dgCustomers" Grid.Row="1" ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer}" 
                                              IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Company Name" Binding="{Binding CompanyName}" Width="*"/>
                            <DataGridTextColumn Header="Contact Name" Binding="{Binding ContactName}" Width="*"/>
                            <DataGridTextColumn Header="Contact Title" Binding="{Binding ContactTitle}" Width="*"/>
                            <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*"/>
                            <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Product Management">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5,0,10">
                        <Label Content="Search by Name:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtSearchProduct" Width="200" Margin="5,0" Text="{Binding SearchProductText, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button x:Name="btnSearchProduct" Content="Search" Width="80" Margin="5,0" Command="{Binding SearchProductCommand}"/>
                        <Button x:Name="btnAddProduct" Content="Add New" Width="80" Margin="20,0,5,0" Command="{Binding AddProductCommand}"/>
                        <Button x:Name="btnUpdateProduct" Content="Update" Width="80" Margin="5,0" Command="{Binding UpdateProductCommand}"/>
                        <Button x:Name="btnDeleteProduct" Content="Delete" Width="80" Margin="5,0" Command="{Binding DeleteProductCommand}"/>
                    </StackPanel>

                    <DataGrid x:Name="dgProducts" Grid.Row="1" ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct}" 
                                            IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="*"/>
                            <DataGridTextColumn Header="Category ID" Binding="{Binding CategoryId}" Width="*"/>
                            <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" Width="*"/>
                            <DataGridTextColumn Header="Units In Stock" Binding="{Binding UnitsInStock}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Order Management">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" Margin="5" ItemsSource="{Binding Orders}"
                  SelectedItem="{Binding SelectedOrder}"
                  IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}"/>
                            <DataGridTextColumn Header="Customer ID" Binding="{Binding CustomerId}"/>
                            <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}"/>
                            <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate, StringFormat='dd/MM/yyyy'}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="LightGray"/>

                    <GroupBox Grid.Row="2" Margin="5" Header="Order Details">
                        <DataGrid ItemsSource="{Binding SelectedOrderDetails}"
                      IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}"/>
                                <DataGridTextColumn Header="Product ID" Binding="{Binding ProductId}"/>
                                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat=C}"/>
                                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
                                <DataGridTextColumn Header="Discount" Binding="{Binding Discount, StringFormat=P}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Reports">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5,0,10">
                        <Label Content="Start Date:" VerticalAlignment="Center"/>
                        <DatePicker x:Name="dpStartDate" Width="120" Margin="5,0"
                        SelectedDate="{Binding ReportStartDate}"/>

                        <Label Content="End Date:" VerticalAlignment="Center" Margin="20,0,0,0"/>
                        <DatePicker x:Name="dpEndDate" Width="120" Margin="5,0"
                        SelectedDate="{Binding ReportEndDate}"/>

                        <Button Content="Generate Report" Width="120" Margin="20,0,0,0"
                    Command="{Binding GenerateReportCommand}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding Orders}"
                  IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}"/>
                            <DataGridTextColumn Header="Customer ID" Binding="{Binding CustomerId}"/>
                            <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}"/>
                            <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate, StringFormat='dd/MM/yyyy'}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
